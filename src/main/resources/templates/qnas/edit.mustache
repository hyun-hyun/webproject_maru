    function getByteLength(str) {
        var byteLength = 0;
        for (var i = 0; i < str.length; i++) {
            var charCode = str.charCodeAt(i);
            // 1ë°”ì´íŠ¸ ë¬¸ìëŠ” ê·¸ëŒ€ë¡œ, 2ë°”ì´íŠ¸ ë¬¸ìëŠ” 2ë¡œ, 3ë°”ì´íŠ¸ ë¬¸ìëŠ” 3ìœ¼ë¡œ
            if (charCode <= 0x007f) {
                byteLength += 1;
            } else if (charCode <= 0x07ff) {
                byteLength += 2;
            } else if (charCode <= 0xffff) {
                byteLength += 3;
            } else {
                byteLength += 4;
            }
        }
        return byteLength;
