<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    
    {{>/layouts/css}}

    <title>마루의 애니 추천 곳간</title>
  </head>
  <body>
    <!--navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-9">
                <a class="navbar-brand" href="/"><h2>애니 추천 곳간</h2></a>
                </div>
                {{#nickname}}
                <div class="col-12 d-flex justify-content-end align-items-center">
                    <b>{{nickname}}</b>님
                    <a href="/user/mypage" class="btn btn-success m-1">마이페이지</a>
                    <a href="/logout" class="btn btn-outline-success">로그아웃</a>
                </div>
                {{/nickname}}

                {{^nickname}}
                <div class="col-12 d-flex justify-content-end align-items-center">
                    <a href="/join" class="btn btn-outline-success m-1">회원가입</a>
                    <a href="/login" class="btn btn-success">로그인</a>
                </div>
                {{/nickname}}

                <div class="col-8">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                         <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/articles/anime">애니메이션</a>
                          </li>
                          <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">예정</a>
                          </li>
                          
                          <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/qna">QnA</a>
                          </li>
                        </ul>
                    </div>
                </div>
                <br>
                <div class="col-lg-4 d-flex justify-content-end">
                        <form class="d-flex" id="searchForm" action="/articles/anime/search" method="get" style="display: inline-block;">
                            <input class="form-control me-2" type="search" name="search" id="searchQuery" placeholder="제목,성우,등장인물,제작사 등" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">검색</button>
                        </form>
                </div>
            </div>
                
        </div>
    </nav>

      {{#msg}}
      <div class="alert alert-primary alert-dismissible">
        {{msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"
        aria-label="Close"></button>
      </div>
      {{/msg}}

<script>
  // 검색 버튼을 눌렀을 때 검색어 유효성을 확인하는 스크립트
    document.getElementById('searchForm').addEventListener('submit', function(event) {
        const query = document.getElementById('searchQuery').value.trim();
        if (query === '') {
            alert('검색어를 입력하세요.');
            event.preventDefault(); // 빈 검색어일 경우 페이지 이동 방지
        }
    });

</script>

